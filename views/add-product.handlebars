<section class="add-product">
    <h2>Add new product</h2>

    <form class="add-product-form">
        <label for="store-id">Store</label> <a href='#add-store' data-rel="popup">Add a new store</a>
        <select id="store-id" name="store-id">
            <option value=" ">Select a store</option>
            {{#each stores}}
            <option value="{{id}}">{{store_name}}</option>
            {{/each}}
        </select>
        <label for="category-id">Category</label> <a href='#add-category' data-rel="popup">Add a new category</a>
        <select id="category-id" name="category-id">
            <option value=" ">Select a category</option>
            {{#each categories}}
            <option value="{{id}}">{{category_name}}</option>
            {{/each}}
        </select>
        <label for="product-name">Product Name</label>
        <input type="text" id="product-name" name="product-name" />
        {{!-- <label for="product-category">Category</label>
        <input type="text" id="product-category" name="product-category" /> --}}
        <label for="description">Description</label>
        <input type="text" id="description" name="description" />
        <label for="size">Size</label>
        <input type="text" id="size" name="size" />
        <label for="price">Price</label>
        <input type="decimal" id="price" name="price" />
        <label for="rating">Rating from 1 to 5</label>
        <input type="number" id="rating" name="rating" />

        <button type="submit" class="btn">Create</button>
    </form>
    <div data-role="popup" id="add-store" class="add-store">
        <h3>Add Store</h3>
        <form class="add-store-form" id="add-store-form">
            <label for="store-name">Store Name:</label>
            <input type="text" name="store-name" id="store-name" />
            <label for="city">City:</label>
            <input type="text" name="city" id="city" />
            <label for="state">State:</label>
            <input type="text" name="state" id="state" />
            <label for="zip">Zip code:</label>
            <input type="text" name="zip" id="zip" />
            <button type="submit" class="btn" id="add-store-btn">Add Store</button>
        </form>
    </div>
    <div data-role="popup" id="add-category" class="add-category">
        <h3>Add Category</h3>
        <form class="add-category-form" id="add-category-form">
            <label for="category-name">Category Name:</label>
            <input type="text" name="category-name" id="category-name" />
             <button type="submit" class="btn" id="add-category-btn">Add Category</button>
            </form>
            </div>
    <button onclick="location.href='/product'">Search/View</button>
</section>

<script src='/javascript/addProduct.js'></script>
<script src='/javascript/addStore.js'></script>
<script src='/javascript/addCategory.js'></script>